        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/textViewExecutor1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_label"
                android:layout_weight="50"
                android:text="Executor 1:"
                android:textSize="@dimen/text_size_label" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:orientation="horizontal"
            android:weightSum="100">

            <EditText
                android:id="@+id/formulario_executor1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin"
                android:layout_weight="87"
                android:background="@drawable/edit_text_basico"
                android:gravity="center_vertical"
                android:inputType="date"
                android:padding="@dimen/padding"
                android:textSize="@dimen/text_size_edittext"
                android:enabled="false"
                android:layout_gravity="top"/>

            <Spinner
                android:id="@+id/spinner_executor1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_weight="13"
                android:background="@drawable/edit_text_basico"
                android:gravity="center"
                android:textSize="@dimen/text_size_edittext"

                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/textViewExecutor2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_label"
                android:layout_weight="50"
                android:text="Executor 2:"
                android:textSize="@dimen/text_size_label" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:orientation="horizontal"
            android:weightSum="100">

            <EditText
                android:id="@+id/formulario_executor2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin"
                android:layout_weight="87"
                android:background="@drawable/edit_text_basico"
                android:gravity="center_vertical"
                android:inputType="date"
                android:padding="@dimen/padding"
                android:textSize="@dimen/text_size_edittext"
                android:enabled="false"
                android:layout_gravity="top"/>


            <Spinner
                android:id="@+id/spinner_executor2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_weight="13"
                android:background="@drawable/edit_text_basico"
                android:gravity="center"
                android:textSize="@dimen/text_size_edittext"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/textViewData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_label"
                android:layout_weight="35"
