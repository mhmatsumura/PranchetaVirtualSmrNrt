                android:textSize="@dimen/text_size_label" />

            <TextView
                android:id="@+id/textViewTipo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_label"
                android:layout_weight="15"
                android:text="Tipo:"
                android:textSize="@dimen/text_size_label" />

            <TextView
                android:id="@+id/textViewRegiao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_label"
                android:layout_weight="20"
                android:text="Regiao:"
                android:textSize="@dimen/text_size_label" />

            <TextView
                android:id="@+id/textViewEquipamento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_label"
                android:layout_weight="30"
                android:text="Equipamento:"
                android:textSize="@dimen/text_size_label" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:orientation="horizontal"
            android:weightSum="100"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/formulario_data"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin"
                android:layout_weight="35"
                android:background="@drawable/edit_text_basico"
                android:gravity="center"
                android:inputType="date"
                android:padding="@dimen/padding"
                android:maxLength="10"
                android:textSize="@dimen/text_size_edittext"
                android:text="10/05/2020"
                android:layout_gravity="top"/>

            <Spinner
                android:id="@+id/spinner_tipoEqp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin"
                android:layout_weight="15"
                android:background="@drawable/edit_text_basico"
                android:gravity="center"
                android:layout_gravity="top"

                />

            <Spinner
                android:id="@+id/spinner_regiao"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin"
                android:layout_weight="20"
                android:background="@drawable/edit_text_basico"
                android:gravity="center"
                android:textSize="@dimen/text_size_edittext"


                />

            <EditText
                android:id="@+id/formulario_equipamento"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_weight="30"
                android:background="@drawable/edit_text_basico"
                android:gravity="center"
                android:maxLength="5"
                android:padding="@dimen/padding"
                android:textSize="@dimen/text_size_edittext"
                android:inputType="textCapCharacters"/>

        </LinearLayout>


        <TextView
            android:id="@+id/textViewCidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_label"
            android:layout_weight="28"
            android:text="Cidade:"
            android:textSize="@dimen/text_size_label"
            android:inputType="textCapCharacters"/>


        <AutoCompleteTextView
            android:id="@+id/actv_cidades"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:background="@drawable/edit_text_basico"
            android:gravity="center"
            android:maxLength="35"
            android:inputType="textCapSentences"
            android:textSize="@dimen/text_size_edittext"


            />


        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginVertical="@dimen/margin"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/textViewOs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_label"
                android:layout_weight="33"
                android:text="Nº OS:"
                android:textSize="@dimen/text_size_label" />

            <TextView
                android:id="@+id/textViewSds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_label"
                android:layout_weight="33"
                android:text="Nº SDS:"
                android:textSize="@dimen/text_size_label" />

            <TextView
                android:id="@+id/textViewOpr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_label"
                android:layout_weight="33"
                android:text="Nº OPR:"
                android:textSize="@dimen/text_size_label" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:orientation="horizontal"
            android:weightSum="100">


            <EditText
                android:id="@+id/formulario_os"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_weight="33"
                android:background="@drawable/edit_text_basico"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="6"
                android:padding="@dimen/padding"
                android:textSize="@dimen/text_size_edittext" />

            <EditText
                android:id="@+id/formulario_sds"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_weight="33"
                android:background="@drawable/edit_text_basico"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="7"
                android:padding="@dimen/padding"
                android:textSize="@dimen/text_size_edittext" />

            <EditText
                android:id="@+id/formulario_opr"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_weight="33"
                android:background="@drawable/edit_text_basico"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="9"
                android:padding="@dimen/padding"
                android:textSize="@dimen/text_size_edittext" />

        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginVertical="@dimen/margin"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/textViewSaida"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_label"
                android:layout_weight="24"
                android:text="Saída:"
                android:textSize="@dimen/text_size_label" />

            <TextView
                android:id="@+id/textViewInicio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_label"
                android:layout_weight="25"
                android:text="Início:"
                android:textSize="@dimen/text_size_label" />

            <TextView
                android:id="@+id/textViewTermino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_label"
                android:layout_weight="25"
                android:text="Término:"
                android:textSize="@dimen/text_size_label" />

            <TextView
                android:id="@+id/textViewRetorno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_label"
                android:layout_weight="25"
                android:text="Retorno:"
                android:textSize="@dimen/text_size_label" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:orientation="horizontal"
            android:weightSum="100">

            <EditText
                android:id="@+id/formulario_saida"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_marginLeft="@dimen/margin"
                android:layout_weight="24"
                android:background="@drawable/edit_text_basico"
                android:gravity="center"
                android:inputType="time"
                android:padding="@dimen/padding"
                android:textSize="@dimen/text_size_edittext"
                android:maxLength="5"
                />

            <EditText
                android:id="@+id/formulario_inicio"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_weight="25"
                android:background="@drawable/edit_text_basico"
                android:gravity="center"
                android:inputType="time"
                android:padding="@dimen/padding"
                android:textSize="@dimen/text_size_edittext"
                android:maxLength="5"/>
            <EditText
                android:id="@+id/formulario_termino"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_weight="25"
                android:background="@drawable/edit_text_basico"
                android:gravity="center"
                android:inputType="time"
                android:padding="@dimen/padding"
                android:textSize="@dimen/text_size_edittext"
                android:maxLength="5"/>
            <EditText
                android:id="@+id/formulario_retorno"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_weight="25"
                android:background="@drawable/edit_text_basico"
                android:gravity="center"
                android:inputType="time"
                android:padding="@dimen/padding"
                android:textSize="@dimen/text_size_edittext"
                android:maxLength="5"/>

        </LinearLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginVertical="@dimen/margin"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/textViewKmi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_label"
                android:layout_weight="25"
                android:text="Km Inicial:"
                android:textSize="@dimen/text_size_label" />

            <TextView
                android:id="@+id/textViewKmf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
